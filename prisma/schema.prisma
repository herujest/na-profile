// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Partner {
  id                 String    @id @default(uuid())
  name               String
  category           String      // MUA, Photographer, Videographer, Stylist, Wardrobe, etc.
  description        String?
  location           String?
  
  whatsapp           String?
  instagram          String?
  email              String?

  priceRange         String?     // ex: "1.5jt â€“ 3jt"
  portfolioUrl       String?
  avatarUrl          String?

  tags               String[]    @default([])  // PostgreSQL array
  notes              String?     // Internal notes

  collaborationCount Int         @default(0)
  internalRank       Float       @default(0)   // for sorting (not displayed)
  manualScore        Float       @default(0)   // Manual score 0-5 for rank calculation

  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

model Portfolio {
  id            String    @id @default(uuid())
  title         String
  slug          String    @unique
  summary       String?
  images        String[]  @default([])  // Array of image URLs from R2
  tags          String[]  @default([])  // Tags/Keywords: price friendly, easy location, best recommendation mua, etc.
  categories    String[]  @default([])  // Project categories: Fashion, Beauty, Commercial, Editorial, etc.
  brands        String[]  @default([])  // Brands/Clients involved in this project
  featured      Boolean   @default(false)
  order         Int       @default(0)   // For custom ordering
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([slug])
  @@index([featured])
}

model SiteSettings {
  id                  String    @id @default(uuid())
  name                String    @default("")
  headerTaglineOne    String    @default("")
  headerTaglineTwo    String    @default("")
  headerTaglineThree  String    @default("")
  headerTaglineFour   String    @default("")
  showCursor          Boolean   @default(false)
  showBlog            Boolean   @default(false)
  darkMode            Boolean   @default(false)
  showResume          Boolean   @default(false)
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@unique([id])
}

model Service {
  id          String    @id @default(uuid())
  title       String
  description String
  order       Int       @default(0)   // For custom ordering
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([order])
}
