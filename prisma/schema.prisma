// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = []
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PartnerCategory {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  partners  Partner[] 
}

model PartnerRank {
  id          String   @id @default(uuid())
  name        String   // e.g. "Platinum", "Gold", "Silver", "Bronze"
  slug        String   @unique
  description String?
  weight      Float    @default(0) // optional, for score calculation
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  partners    Partner[] 
}

model PartnerSocial {
  id        String   @id @default(uuid())
  partner   Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  partnerId String
  platform  String   // e.g. "instagram", "whatsapp", "tiktok", "facebook"
  handle    String
  url       String?
  order     Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([partnerId])
}

model Partner {
  id                 String            @id @default(uuid())
  name               String
  categoryLegacy     String?           // Legacy field - kept for backward compatibility (deprecated)
  categoryId         String?           // FK ke PartnerCategory (nullable)
  category           PartnerCategory?  @relation(fields: [categoryId], references: [id])
  description        String?
  location           String?
  
  whatsapp           String?           // Legacy - kept for backward compatibility
  instagram          String?           // Legacy - kept for backward compatibility
  email              String?

  priceRange         String?     // ex: "1.5jt â€“ 3jt"
  portfolioUrl       String?
  avatarUrl          String?

  tags               String[]    @default([])  // PostgreSQL array
  notes              String?     // Internal notes

  collaborationCount Int         @default(0)
  internalRank       Float       @default(0)   // for sorting (not displayed)
  manualScore        Float       @default(0)   // Manual score 0-5 for rank calculation

  rankId             String?           // FK ke PartnerRank
  rank               PartnerRank?      @relation(fields: [rankId], references: [id])

  socials            PartnerSocial[]

  portfolios         Portfolio[]       @relation("PortfolioPartner") // relasi 1-N

  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  @@index([categoryId])
  @@index([rankId])
}

model Portfolio {
  id            String    @id @default(uuid())
  title         String
  slug          String    @unique
  summary       String?
  images        String[]  @default([])  // Array of image URLs from R2
  tags          String[]  @default([])  // Tags/Keywords: price friendly, easy location, best recommendation mua, etc.
  categories    String[]  @default([])  // Project categories: Fashion, Beauty, Commercial, Editorial, etc.
  brands        String[]  @default([])  // Brands/Clients involved in this project
  featured      Boolean   @default(false)
  order         Int       @default(0)   // For custom ordering
  
  partnerId     String    // mandatory: every portfolio has a partner
  partner       Partner   @relation("PortfolioPartner", fields: [partnerId], references: [id])

  datePublished DateTime? // gunakan ini untuk menghitung collaboration berdasarkan tanggal
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([slug])
  @@index([featured])
  @@index([partnerId])
  @@index([datePublished])
}

model SiteSettings {
  id                  String    @id @default(uuid())
  name                String    @default("")
  headerTaglineOne    String    @default("")
  headerTaglineTwo    String    @default("")
  headerTaglineThree  String    @default("")
  headerTaglineFour   String    @default("")
  showCursor          Boolean   @default(false)
  showBlog            Boolean   @default(false)
  darkMode            Boolean   @default(false)
  showResume          Boolean   @default(false)
  aboutPara           String    @default("")  // About section paragraph
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@unique([id])
}

model Service {
  id          String    @id @default(uuid())
  title       String
  description String
  order       Int       @default(0)   // For custom ordering
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([order])
}

model Social {
  id          String    @id @default(uuid())
  title       String
  link        String
  order       Int       @default(0)   // For custom ordering
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([order])
}
