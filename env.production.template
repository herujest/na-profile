# Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit the actual .env.production file to git!
# Command: cp env.production.template .env.production

# Database Configuration (Production)
DATABASE_URL=postgresql://postgres:your_strong_prod_password@your-prod-db-host:5432/nisa_profile_prod?connection_limit=10&pool_timeout=20&sslmode=require

# Node Environment
NODE_ENV=production

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1

# Admin Authentication (Use strong passwords in production!)
ADMIN_USERNAME=your_prod_admin_username
ADMIN_PASSWORD=your_strong_prod_password_here

# R2/S3 Configuration (Production)
R2_ENDPOINT=https://your-r2-endpoint.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your-bucket-name-prod
R2_PUBLIC_URL=https://your-public-url-prod.com
NEXT_PUBLIC_R2_PUBLIC_BASE=https://your-public-url-prod.com

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_prod_password
POSTGRES_DB=nisa_profile_prod
POSTGRES_PORT=5432

# Application Port
APP_PORT=5175

# Node.js optimizations
NODE_OPTIONS=--max-old-space-size=512

